{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "../typings/tsd.d.ts",
        "./**/*.ts",
        "!./**/*.d.ts"
    ],
    "files": [
        "../typings/tsd.d.ts",
        "./Stream.ts",
        "./Transform.ts",
        "./index.ts",
        "./node.ts",
        "./transformers.ts",
        "./util.ts"
    ]
}
